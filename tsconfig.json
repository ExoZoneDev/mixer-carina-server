{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "sourceMap": true,
        "target": "es6",
        "outDir": "lib",
        "lib": [
            "es5",
            "dom",
            "es2015.iterable",
            "es2015.collection",
            "es2015.core",
            "es2016.array.include",
            "es2015.promise"
        ],
        "types": [
            "node"
        ],
         "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "test",
        "lib"
    ]
}
